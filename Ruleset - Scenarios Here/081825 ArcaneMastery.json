{
  "name": "Arcane Mastery",
  "description": "A spell-focused campaign where all classes wield tailored spells, with enhanced damage, free casts on crits, and tactical advantages for a magical adventure.",
  "Rules": [
    {
      "Rule": "CardClassRestrictionOverridden",
      "Config": {
        "Fireball": "HeroSorcerer",
	"Fireball": "HeroGuardian", 
	"Fireball": "HeroBarbarian", // Allows Sorcerer, Guardian, and Barbarian to use Fireball for AoE damage
        "Zap": "HeroSorcerer", 
	"Zap": "HeroHunter", 
	"Zap": "HeroRogue", // Allows Sorcerer, Hunter, and Rogue to use Zap for quick electric attacks
        "Heal": "HeroGuardian", 
	"Heal": "HeroBard", 
	"Heal": "HeroSorcerer", // Allows Guardian, Bard, and Sorcerer to use Heal for party sustain
        "Whirlwind": "HeroBarbarian", 
	"Whirlwind": "HeroGuardian", // Allows Barbarian and Guardian to use Whirlwind, rethemed as a magical burst
        "HunterArrow": "HeroHunter", 
	"HunterArrow": "HeroRogue" // Allows Hunter and Rogue to use HunterArrow, rethemed as a precision spell
      }
      // Purpose: Expands spell access across classes, enabling all to use key magical abilities
    },
    {
      "Rule": "AbilityDamageOverridden",
      "Config": {
        "Fireball": [8, 16], // Sets Fireball to 8 normal, 16 crit damage for powerful AoE
        "Zap": [4, 8], // Sets Zap to 4 normal, 8 crit damage for frequent electric strikes
        "HunterArrow": [6, 12], // Sets HunterArrow to 6 normal, 12 crit damage for strong ranged attacks
        "Whirlwind": [5, 10] // Sets Whirlwind to 5 normal, 10 crit damage for melee spell burst
      }
      // Purpose: Boosts damage of key spells to make them impactful in combat
    },
    {
      "Rule": "AbilityHealOverridden",
      "Config": {
        "Heal": 10, // Sets Heal to restore 10 health per use
        "HealingLight": 12 // Sets HealingLight to restore 12 health for stronger party sustain
      }
      // Purpose: Enhances healing spells to keep the party alive during spell-heavy battles
    },
    {
      "Rule": "FreeAbilityOnCrit",
      "Config": {
        "HeroSorcerer": "Fireball", // Fireball becomes free (0 AP) after a critical hit
        "HeroSorcerer": "Zap", // Zap becomes free after a critical hit
        "HeroHunter": "HunterArrow" // HunterArrow becomes free after a critical hit
      }
      // Purpose: Allows free spell casts after crits, rewarding aggressive play
    },
    {
      "Rule": "GoldPickedUpMultiplied",
      "Config": 1.25 // Increases gold pickups by 25% for more item purchases
      // Purpose: Provides extra resources to buy spell-supporting items
    },
    {
      "Rule": "EnemyDoorOpeningDisabled",
      "Config": true // Prevents enemies from opening doors
      // Purpose: Allows players to control encounter pacing for better spell positioning
    },
    {
      "Rule": "EnemyHealthScaled",
      "Config": 0.85 // Reduces enemy health by 15%
      // Purpose: Balances increased spell damage for faster, fair encounters
    },
    {
      "Rule": "LevelSequenceOverridden",
      "Config": [
        "Level_ElvenQueen", // Starts with Elven Queen for a magical, forest-themed level
        "Level_RealmOfTheRatKing" // Follows with Rat King for a gritty, spell-testing challenge
      ]
      // Purpose: Sets a thematic level order to match the magical campaign
    }
  ]
}